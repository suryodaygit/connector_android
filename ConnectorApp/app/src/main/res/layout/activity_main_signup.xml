<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration"
        android:textColor="@color/subTitle"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/_80sdp" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_60sdp"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_20sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entity"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/marqueeText" />
            <Spinner
                android:id="@+id/sp_entity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/spinner_background"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:dropDownWidth="fill_parent" />
          <View
              android:layout_width="match_parent"
              android:layout_height="@dimen/_1sdp"
              android:background="@color/gray"/>
        <RelativeLayout
            android:id="@+id/rl_gst_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_gst_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GST NO"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/marqueeText"
                android:paddingTop="@dimen/_10sdp"/>
            <EditText
                android:id="@+id/et_gst_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="text"
                android:textSize="@dimen/_12sdp"
                android:maxLength="16"
                android:layout_below="@id/tv_gst_no"/>
            <Button
                android:id="@+id/btn_gst_no_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_22sdp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_pan_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_pan_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pan Card NO"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/marqueeText"
                android:paddingTop="@dimen/_10sdp"/>
            <EditText
                android:id="@+id/et_pan_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="text"
                android:textSize="@dimen/_12sdp"
                android:maxLength="16"
                android:layout_below="@id/tv_pan_card"/>
            <Button
                android:id="@+id/btn_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_22sdp"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
        <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Name"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/marqueeText"
        android:paddingTop="@dimen/_20sdp"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:maxLength="20"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/marqueeText"
            android:paddingTop="@dimen/_15sdp"/>
        <EditText
            android:id="@+id/et_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:inputType="number"
            android:maxLength="10"/>
        <TextView
            android:id="@+id/tv_send_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send OTP"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:paddingTop="@dimen/_4sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/marqueeText"
           />
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/_12sdp" />

        <include
            android:id="@+id/button"
            layout="@layout/button_layout"/>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
</layout>