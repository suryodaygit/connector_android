<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:background="#f6f6f6"
    tools:context=".dashboard.fragment.home.HomeFragment">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:background="@color/subTitle"
         android:layout_marginTop="@dimen/_10sdp"
         android:padding="@dimen/_12sdp">
         <de.hdodenhof.circleimageview.CircleImageView
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/profile_image"
             android:layout_width="96dp"
             android:layout_height="96dp"
             android:background="@drawable/profile"
             android:layout_marginStart="@dimen/_10sdp"
             app:civ_border_color="@color/transparent"
             app:civ_border_width="2dp" />
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_gravity="center"
             android:paddingStart="@dimen/_10sdp">
             <TextView
                 android:id="@+id/tv_user_name"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Welcome user"
                 android:textSize="@dimen/_12sdp"
                 android:textColor="@color/white"/>
             <TextView
                 android:id="@+id/tv_status"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Status : In Process"
                 android:textSize="@dimen/_12sdp"
                 android:textColor="@color/white"/>

         </LinearLayout>
     </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:src="@drawable/profile"
            android:layout_marginStart="@dimen/_10sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome user"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/subTitle"
            android:textStyle="bold"
            android:paddingTop="@dimen/_12sdp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_basic_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingStart="@dimen/_20sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingTop="@dimen/_30sdp">


        <LinearLayout
            android:id="@+id/ll_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:background="@drawable/home_view_border">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/basic"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/subTitle"
                android:textStyle="bold"
                android:paddingTop="@dimen/_5sdp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_basic_complete_status"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/complete_status"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="-40dp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/_20sdp"
            android:paddingVertical="@dimen/_20sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:background="@drawable/home_view_border">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/address"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/subTitle"
                android:textStyle="bold"
                android:paddingTop="@dimen/_5sdp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_address_complete_status"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/complete_status"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="-40dp"
            android:visibility="gone"/>

    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:weightSum="2"
       android:paddingStart="@dimen/_20sdp"
       android:paddingEnd="@dimen/_20sdp"
       android:layout_marginTop="@dimen/_20sdp">
       <LinearLayout
           android:id="@+id/ll_business_detail"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:orientation="vertical"
           android:paddingStart="@dimen/_20sdp"
           android:paddingEnd="@dimen/_20sdp"
           android:paddingTop="@dimen/_20sdp"
           android:paddingBottom="@dimen/_20sdp"
           android:background="@drawable/home_view_border">

           <ImageView
               android:layout_width="@dimen/_30sdp"
               android:layout_height="@dimen/_30sdp"
               android:src="@drawable/business_detail"
               android:layout_gravity="center_horizontal" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Business"
               android:textSize="@dimen/_14sdp"
               android:textColor="@color/subTitle"
               android:textStyle="bold"
               android:paddingTop="@dimen/_5sdp"
               android:layout_gravity="center_horizontal" />

       </LinearLayout>
       <ImageView
           android:id="@+id/iv_business_complete_status"
           android:layout_width="@dimen/_30sdp"
           android:layout_height="@dimen/_20sdp"
           android:src="@drawable/complete_status"
           android:layout_marginTop="@dimen/_5sdp"
           android:layout_marginStart="-40dp"
           android:visibility="gone"/>

      <LinearLayout
          android:id="@+id/ll_other"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          android:paddingStart="@dimen/_30sdp"
          android:paddingEnd="@dimen/_30sdp"
          android:paddingTop="@dimen/_20sdp"
          android:paddingBottom="@dimen/_20sdp"
          android:layout_marginStart="@dimen/_12sdp"
          android:layout_marginBottom="@dimen/_2sdp"
          android:background="@drawable/home_view_border">

         <ImageView
             android:layout_width="@dimen/_30sdp"
             android:layout_height="@dimen/_30sdp"
             android:src="@drawable/entity"
             android:layout_gravity="center_horizontal" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Other"
             android:textSize="@dimen/_14sdp"
             android:textColor="@color/subTitle"
             android:textStyle="bold"
             android:paddingTop="@dimen/_5sdp"
             android:layout_gravity="center_horizontal" />

      </LinearLayout>
       <ImageView
           android:id="@+id/iv_other_complete_status"
           android:layout_width="@dimen/_30sdp"
           android:layout_height="@dimen/_20sdp"
           android:src="@drawable/complete_status"
           android:layout_marginTop="@dimen/_5sdp"
           android:layout_marginStart="-40dp"
           android:visibility="gone"/>

   </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp">
            <LinearLayout
                android:id="@+id/ll_document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:paddingTop="@dimen/_20sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:background="@drawable/home_view_border">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/upload"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/document_upload"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/subTitle"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>
            <ImageView
                android:id="@+id/iv_document_complete_status"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/complete_status"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="-40dp"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/ll_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="@dimen/_30sdp"
                android:paddingEnd="@dimen/_30sdp"
                android:paddingTop="@dimen/_20sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:background="@drawable/home_view_border">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/review"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/subTitle"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>
            <ImageView
                android:id="@+id/iv_review_complete_status"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/complete_status"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="-40dp"
                android:visibility="gone"/>


        </LinearLayout>
        <include
            android:id="@+id/btn_review"
            layout="@layout/button_layout"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_lead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_20sdp">
    <LinearLayout
        android:id="@+id/ll_create_lead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/_25sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingTop="@dimen/_20sdp"
        android:paddingBottom="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:background="@drawable/home_view_border">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/upload"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Lead"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/subTitle"
            android:textStyle="bold"
            android:paddingTop="@dimen/_5sdp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/complete_status"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="-40dp"
        android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>