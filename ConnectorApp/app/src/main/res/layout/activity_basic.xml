<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:overScrollMode="never"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/view_border_bg"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entity : "
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/et_entity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:enabled="true"
                    android:maxLength="20"
                    android:hint="ENTITY"
                    android:inputType="textCapCharacters"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/view_border_bg"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company Name : "
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/et_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:enabled="true"
                    android:hardwareAccelerated="true"
                    android:maxLength="20"
                    android:digits="QWERTYUIOPASDFGHJKLZXCVBNM"
                    android:hint="ABC"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/view_border_bg"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pan Card Number : "
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/et_pan_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:enabled="true"
                    android:maxLength="10"
                    android:hint="BHDOJ9865Q"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/view_border_bg"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:textColor="@color/app_color"
            android:textSize="@dimen/_14sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_weight="1">

                <Spinner
                    android:id="@+id/sp_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/spinner_background"
                    android:dropDownWidth="fill_parent" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_toEndOf="@+id/ll_name"
                android:enabled="true"
                android:hint="SURYODAY"
                android:digits="QWERTYUIOPASDFGHJKLZXCVBNM"
                android:inputType="textCapCharacters"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:textSize="@dimen/_10sdp" />

    </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical"
                android:background="@drawable/view_border_bg"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Present Occupation : "
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_14sdp" />
                <Spinner
                    android:id="@+id/sp_present_occupation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/spinner_background"
                    android:dropDownWidth="fill_parent" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/gray" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_other_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="vertical"
                android:background="@drawable/view_border_bg"
                android:visibility="gone"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Occupation : "
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/et_occupation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:enabled="true"
                    android:maxLength="10"
                    android:hint="Real Estate Consultant-Residential"
                    android:inputType="textCapCharacters"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/view_border_bg"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number : "
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/et_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:enabled="true"
                    android:maxLength="10"
                    android:hint="9821323132"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/view_border_bg"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alternate Mobile Number : "
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/et_alternet_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:enabled="true"
                    android:maxLength="10"
                    android:hint="9808237839"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/view_border_bg"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email : "
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:enabled="true"
                    android:maxLength="40"
                    android:hint="abc@gmail.com"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_gst_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/view_border_bg"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GST Number : "
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/et_gst_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:enabled="true"
                    android:maxLength="12"
                    android:hint="1234545"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_pan_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/view_border_bg"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_aadhar_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aadhar Card Number* : "
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/et_aadhar_card_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_aadhar_text"
                    android:hint="797978687878"
                    android:inputType="number"
                    android:maxLength="12"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
                <Button
                    android:id="@+id/btn_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify"
                    android:textColor="@color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_12sdp"/>
            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/view_border_bg"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Mobile no link with aadhar no "
                android:textColor="@color/app_color"
                android:textSize="@dimen/_14sdp" />
            <RadioGroup
                android:id="@+id/rg_aadhar_mobile_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_aadhar_mobile_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:paddingStart="@dimen/_10sdp"/>
                <RadioButton
                    android:id="@+id/rb_aadhar_mobile_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:paddingStart="@dimen/_10sdp"/>
            </RadioGroup>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_aadhar_mobile_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/view_border_bg"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number : "
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_14sdp" />

                <EditText
                    android:id="@+id/et_aadhar_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:enabled="true"
                    android:maxLength="10"
                    android:hint="9821323132"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/view_border_bg"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DOB : "
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/tv_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:enabled="true"
                    android:maxLength="20"
                    android:hint="04/05/2002"
                    android:editable="false"
                    android:clickable="false"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

            <include
                android:id="@+id/btn_submit"
                layout="@layout/button_layout"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
</layout>